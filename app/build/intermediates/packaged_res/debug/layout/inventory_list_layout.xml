<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:id="@+id/bottomitemlay">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/underlinecolor1"
        android:gravity="center"
        android:weightSum="6">


        <TextView
            android:id="@+id/isno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text=""
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/iproduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/checkb1text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text=""
            android:gravity="center"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/checkb2text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/checkb3text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/checkb4text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/checkb5text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/checkb6text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/checkb7text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/istatus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/black" />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
</FrameLayout>