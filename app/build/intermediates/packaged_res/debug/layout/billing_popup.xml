<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/etIgstAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter IGST Amount"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etHallmarkCharges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Hallmark Charges"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etCourierCharges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Courier Charges"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etBalanceAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Balance Amount"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="10dp"/>

</LinearLayout>
