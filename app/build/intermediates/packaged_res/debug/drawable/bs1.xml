<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#00FF00" /> <!-- Set the background color for the button when pressed -->
            <corners android:radius="16dp" /> <!-- Set the radius for curved corners -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/underlinecolor1" /> <!-- Set the default background color for the button -->
            <corners android:radius="16dp" /> <!-- Set the radius for curved corners -->
        </shape>
    </item>
</selector>