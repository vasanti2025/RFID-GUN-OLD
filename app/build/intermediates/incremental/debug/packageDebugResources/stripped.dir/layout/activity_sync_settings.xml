<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <CheckBox
        android:id="@+id/checkbox_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync Product" />

    <CheckBox
        android:id="@+id/checkbox_inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync Inventory" />

    <CheckBox
        android:id="@+id/checkbox_bills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync Bills" />

    <CheckBox
        android:id="@+id/checkbox_reports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync Reports" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Settings" />
</LinearLayout>
