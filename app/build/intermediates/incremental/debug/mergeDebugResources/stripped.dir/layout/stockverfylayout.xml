<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svritemhold"
    android:layout_width="wrap_content"
    android:layout_height="70dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/mainholder">

        <HorizontalScrollView
            android:id="@+id/reportitemscroll"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_toLeftOf="@id/svstatusimgholder">

            <LinearLayout
                android:id="@+id/svholder"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/svdate"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/svtqty"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top"
                    android:text="T qty"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/svtwt"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top"
                    android:text="T wt"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/svmqty"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top"
                    android:text="M qty"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/svmwt"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top"
                    android:text="M wt"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/svumqty"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top"
                    android:text="UM qty"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/svunwt"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top"
                    android:text="UM wt"
                    android:textColor="@color/black"
                    android:textSize="13dp" />


                <TextView
                    android:id="@+id/svstatus"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal|top"
                    android:text="Status"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

            </LinearLayout>


        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:weightSum="2"
            android:id="@+id/svstatusimgholder"
            android:orientation="vertical"
            android:gravity="center_horizontal|top">

            <ImageView
                android:id="@+id/svstatusimg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="Status"
                android:textSize="13dp" />


            <ImageView
                android:id="@+id/svstatusimg1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Status"
                android:background="@drawable/i_pausescan" />

        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>