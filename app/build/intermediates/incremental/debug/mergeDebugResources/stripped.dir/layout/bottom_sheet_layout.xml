<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top bar with close button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/Maincolor"
        android:padding="8dp">

        <!-- Empty space to align the close button to the right -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/maintitle"
            android:textColor="@color/black"/>



        <!-- Close button -->
        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:background="@android:color/transparent" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/spinnerh"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enter purity for cat"
            android:layout_gravity="center_horizontal"
            android:id="@+id/purehint"
            android:visibility="gone"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp"
            android:id="@+id/beholder"
            android:weightSum="2">

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.5"
                android:id="@+id/itemname"
                android:layout_gravity="center_vertical"
                android:background="@drawable/boxlayout"
                android:hint="Tap to add"/>


            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:background="@drawable/bs"
                android:text="Add"
                android:id="@+id/additem"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_gravity="center_vertical"/>


        </LinearLayout>

        <ListView
            android:id="@+id/spinnerlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!--        </ScrollView>-->

    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:id="@+id/allmails"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bs"
        android:layout_alignParentBottom="true"
        android:text="Send all"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:visibility="gone"/>

    </RelativeLayout>
</LinearLayout>


